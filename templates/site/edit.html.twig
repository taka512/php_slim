{% extends "layout.html.twig" %}

{% block title %}サイト編集{% endblock %}
{% block breadcrumb %}
      <li><a href="/">Home</a></li>
      <li><a href="/site">サイト一覧</a></li>
      <li class="active">サイト編集</li>
{% endblock %}
{% block content %}

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-header">
          <h1 id="forms">サイト情報</h1>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-10">
        <div class="well bs-component">
          <form class="form-horizontal" action="/site/{{ form.get('id').getValue() }}/edit" method="POST">
            <input type="hidden" name="id" value="{{ form.get('id').getValue() }}">
            <input type="hidden" name="confirm" value="1">
            <input type="hidden" name="csrf" value="{{ form.get('csrf').getValue() }}">
            <fieldset>
              <legend>編集</legend>
              <div class="box-header with-border">
                {% for messages in form.getMessages %}
                  {% for message in messages %}
                    <font color="red">{{ message }}</font><br/>
                  {% endfor %}
                {% endfor %}
              </div>
              <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">サイト名</label>
                <div class="col-lg-10">
                  <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputName" name="name" value="{{ form.get('name').getValue() }}" >
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="inputUrl" class="col-lg-2 control-label">サイトURL</label>
                <div class="col-lg-10">
                  <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputUrl" name="url" value="{{ form.get('url').getValue() }}">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="inputUrl" class="col-lg-2 control-label">削除フラグ</label>
                <div class="col-lg-10">
                  <div class="checkbox col-lg-10">
                    <label>
                      <input type="hidden" name="del_flg" value="{{ form.get('del_flg').getUncheckedValue() }}">
                      <input type="checkbox" name="del_flg" value="{{ form.get('del_flg').getCheckedValue() }}" {% if form.get('del_flg').getValue() %}checked{% endif %}> 削除
                    </label>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-2 control-label">作成日時</label>
                <div class="col-lg-10">
                  <div class="col-lg-10">
                    <span>{{ form.get('created_at').getValue() }}</span>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-2 control-label">更新日時</label>
                <div class="col-lg-10">
                  <div class="col-lg-10">
                    <span>{{ form.get('updated_at').getValue() }}</span>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                  <button type="reset" class="btn btn-default" onclick="javascript:window.history.back(-1);return false;">キャンセル</button>
                  <button type="submit" class="btn btn-primary">保存</button>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>


{% endblock %}
