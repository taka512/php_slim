{% extends "admin/layout.html.twig" %}

{% block title %}ユーザ一覧{% endblock %}
{% block breadcrumb %}
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('admin_home_index') }}">home</a></li>
        <li class="breadcrumb-item active">ユーザ一覧</li>
      </ol>
{% endblock %}
{% block content %}

    <div class="row">
      <div class="col-lg-12">
        <h2>ユーザ一覧</h1>
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>id</th>
              <th>ログインid</th>
              <th>削除</th>
            </tr>
          </thead>
          <tbody>
            {% for user in users %}
            <tr>
              <td><a href="{{ path_for('admin_user_edit', {'id': user.id}) }}">{{ user.id }}</a></td>
              <td>{{ user.loginId }}</td>
              <td>{{ user.delFlg }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        <form action="{{ path_for('admin_user_create') }}" class="form-horizontal" method="GET">
          <div class="form-group">
            <button type="submit" class="btn btn-primary">新規登録</button>
          </div>
        </form>
      </div>
    </div>


{% endblock %}
