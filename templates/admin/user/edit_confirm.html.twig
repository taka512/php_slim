{% extends "admin/layout.html.twig" %}

{% block title %}ユーザ編集(確認){% endblock %}
{% block breadcrumb %}
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('admin_home_index') }}">home</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('admin_user_index') }}">ユーザ一覧</a></li>
        <li class="breadcrumb-item active">ユーザ編集(確認)</li>
      </ol>
{% endblock %}
{% block content %}

    <div class="row">
      <div class="col-lg-12">
        <h2>編集(確認)</h2>
        <form class="form-horizontal" action="{{ path_for('admin_user_edit', {'id': form.get('id').getValue()}) }}" method="POST">
          <input type="hidden" name="id" value="{{ form.get('id').getValue() }}">
          <input type="hidden" name="csrf" value="{{ form.get('csrf').getValue() }}">
          <input type="hidden" id="back" name="back" value="0">
          <div class="form-group">
            <label for="inputLoginId">ログインID</label>
            <p>{{ form.get('login_id').getValue() }}</p>
            <input type="hidden" class="form-control" id="inputLoginId" name="login_id" value="{{ form.get('login_id').getValue() }}" >
          </div>
          <div class="form-group">
            <label for="inputUrl">削除フラグ</label>
            <p>{% if form.get('del_flg').getValue() %}ON{% else %}OFF{% endif %}</p>
            <input type="hidden" name="del_flg" value="{{ form.get('del_flg').getValue() }}">
          </div>
          <div class="form-group">
            <label>作成日時</label>
            <p>{{ form.get('created_at').getValue() }}</p>
          </div>
          <div class="form-group">
            <label>更新日時</label>
            <p>{{ form.get('updated_at').getValue() }}</p>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-secondary" onclick="javascript:document.getElementById('back').value = 1;">キャンセル</button>
            <button type="submit" class="btn btn-primary">保存</button>
          </div>
        </form>
      </div>
    </div>


{% endblock %}
