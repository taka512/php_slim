{% extends "admin/layout.html.twig" %}

{% block title %}サイト一覧{% endblock %}
{% block breadcrumb %}
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ url_for('admin_home_index') }}">home</a></li>
        <li class="breadcrumb-item active">サイト一覧</li>
      </ol>
{% endblock %}
{% block content %}

    <div class="row">
      <div class="col-lg-12">
        <h2>サイト一覧</h1>
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>id</th>
              <th>サイト名</th>
              <th>URL</th>
            </tr>
          </thead>
          <tbody>
            {% for site in sites %}
            <tr>
              <td><a href="{{ url_for('admin_site_edit', {'id': site.id}) }}">{{ site.id }}</a></td>
              <td>{{ site.name }}</td>
              <td>{{ site.url }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        <form action="{{ url_for('admin_site_create') }}" class="form-horizontal" method="GET">
          <div class="form-group">
            <button type="submit" class="btn btn-primary">新規登録</button>
          </div>
        </form>
      </div>
    </div>


{% endblock %}
