{% extends "layout.html.twig" %}

{% block title %}サイト一覧{% endblock %}
{% block breadcrumb %}
      <li><a href="{{ path_for('admin_home_index') }}">Home</a></li>
      <li class="active">サイト一覧</li>
{% endblock %}
{% block content %}

  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-header">
          <h1 id="tables">サイト一覧</h1>
        </div>
        <div class="bs-component">
          <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th>id</th>
                <th>サイト名</th>
                <th>URL</th>
              </tr>
            </thead>
            <tbody>
              {% for site in sites %}
              <tr>
                <td><a href="{{ path_for('admin_site_edit', {'id': site.id}) }}">{{ site.id }}</a></td>
                <td>{{ site.name }}</td>
                <td>{{ site.url }}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
          <form action="{{ path_for('admin_site_create') }}" class="form-horizontal" method="GET">
            <fieldset>
              <div class="form-group">
                <div class="col-lg-11 col-lg-offset-1">
                  <button type="submit" class="btn btn-primary">新規登録</button>
                </div>
              </div>
            </fieldset>
          </form>

      </div>
    </div>
  </div>


{% endblock %}
