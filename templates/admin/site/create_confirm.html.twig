{% extends "layout.html.twig" %}

{% block title %}サイト登録{% endblock %}
{% block breadcrumb %}
      <li><a href="{{ path_for('admin_home_index') }}">Home</a></li>
      <li><a href="{{ path_for('admin_site_index') }}">サイト一覧</a></li>
      <li class="active">サイト新規登録</li>
{% endblock %}
{% block content %}

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-header">
          <h1 id="forms">サイト情報</h1>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-10">
        <div class="well bs-component">
          <form class="form-horizontal" action="{{ path_for('admin_site_create') }}" method="POST">
            <input type="hidden" name="csrf" value="{{ form.get('csrf').getValue() }}">
            <input type="hidden" id="back" name="back" value="0">
            <fieldset>
              <legend>新規登録(確認)</legend>
              <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">サイト名</label>
                <div class="col-lg-10">
                  <div class="col-lg-10">
                    <span>{{ form.get('name').getValue() }}</span>
                    <input type="hidden" class="form-control" id="inputName" name="name" value="{{ form.get('name').getValue() }}" >
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="inputUrl" class="col-lg-2 control-label">サイトURL</label>
                <div class="col-lg-10">
                  <div class="col-lg-10">
                    <span>{{ form.get('url').getValue() }}</span>
                    <input type="hidden" class="form-control" id="inputUrl" name="url" value="{{ form.get('url').getValue() }}">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                  <button type="submit" class="btn btn-default" onclick="javascript:document.getElementById('back').value = 1;">キャンセル</button>
                  <button type="submit" class="btn btn-primary">保存</button>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>


{% endblock %}
