{% extends "admin/layout.html.twig" %}

{% block title %}タグ削除(削除){% endblock %}
{% block breadcrumb %}
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('admin_home_index') }}">home</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('admin_tag_index') }}">タグ一覧</a></li>
        <li class="breadcrumb-item active">タグ削除（確認）</li>
      </ol>
{% endblock %}
{% block content %}

    <div class="row">
      <div class="col-lg-12">
        <h2>削除(確認)</h2>
          <div class="form-group">
            <label for="inputName">タグ名</label>
            <p>{{ form.get('name').getValue() }}</p>
          </div>
          <div class="form-group">
            <label>作成日時</label>
            <p>{{ form.get('created_at').getValue() }}</p>
          </div>
          <div class="form-group">
            <label>更新日時</label>
            <p>{{ form.get('updated_at').getValue() }}</p>
          </div>
          <div class="form-group">
            <button class="btn btn-secondary" onclick="javascript:history.back();">キャンセル</button>
            <form class="form-horizontal" action="{{ path_for('admin_tag_delete', {'id': form.get('id').getValue()}) }}" method="POST">
              <input type="hidden" name="csrf" value="{{ form.get('csrf').getValue() }}">
              <button type="submit" class="btn btn-primary">削除</button>
            </form>
          </div>
      </div>
    </div>
{% endblock %}
