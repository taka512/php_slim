{% extends "admin/layout.html.twig" %}

{% block title %}タグ一覧{% endblock %}
{% block breadcrumb %}
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ url_for('admin_home_index') }}">home</a></li>
        <li class="breadcrumb-item active">タグ一覧</li>
      </ol>
{% endblock %}
{% block content %}

    <div class="row">
      <div class="col-lg-12">
        <h2>タグ一覧</h1>
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>id</th>
              <th>タグ名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for tag in tags %}
            <tr>
              <td><a href="{{ url_for('admin_tag_edit', {'id': tag.id}) }}">{{ tag.id }}</a></td>
              <td>{{ tag.name }}</td>
              <td>
                <form action="{{ url_for('admin_tag_delete', {'id': tag.id}) }}" method="GET">
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary">削除</button>
                  </div>
                </form>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        <center>
          <div class="pagerfanta">
            {{ page_html | raw }}
          </div>
        </center>
        <form action="{{ url_for('admin_tag_create') }}" class="form-horizontal" method="GET">
          <div class="form-group">
            <button type="submit" class="btn btn-primary">新規登録</button>
          </div>
        </form>
      </div>
    </div>


{% endblock %}
