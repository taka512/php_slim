{% extends "admin/layout.html.twig" %}

{% block title %}タグ登録{% endblock %}
{% block breadcrumb %}
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path_for('admin_home_index') }}">home</a></li>
        <li class="breadcrumb-item"><a href="{{ path_for('admin_tag_index') }}">タグ一覧</a></li>
        <li class="breadcrumb-item active">タグ登録</li>
      </ol>
{% endblock %}
{% block content %}
    <div class="row">
      <div class="col-lg-12">
        <h2>登録</h2>
        <div class="col-lg-10">
          <form class="form-horizontal" action="{{ path_for('admin_tag_create') }}" method="POST">
            <input type="hidden" name="confirm" value="1">
            <input type="hidden" name="csrf" value="{{ form.get('csrf').getValue() }}">
            <div class="form-group">
              {% for messages in form.getMessages %}
                {% for message in messages %}
                <font color="red">{{ message }}</font><br/>
                {% endfor %}
              {% endfor %}
            </div>
            <div class="form-group">
              <label for="inputName">タグ名</label>
              <input type="text" class="form-control" id="inputName" name="name" value="{{ form.get('name').getValue() }}" >
            </div>
            <button type="submit" class="btn btn-primary">確認</button>
          </form>
        </div>
      </div>
    </div>
{% endblock %}
